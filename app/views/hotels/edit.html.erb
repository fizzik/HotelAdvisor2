<h3>Edit hotel</h3>
<%= form_for @hotel, :html =>{:multipart => true} do |f| %>

    <%= f.label :title  %>
    <%= f.text_field :title %>

    <%= f.label :room_description %>
    <%= f.text_area :room_description, rows: 4 %>

    <%= f.label :price  %>
    <%= f.text_field :price %>

    <%= f.label :breackfast %>
    <%= f.select :breackfast, Hotel::HOTEL_BREACKFAST %>

    <%= f.label :image %>
    <%= f.file_field :image %>

    <p class="text-info">Add address hotel</p>

    <%= f.label :country %>
    <%= f.text_field :country %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :street %>
    <%= f.text_field :street %>

    <br/>
    <br/>
    <%= f.submit "Update Hotel", class: "btn btn-primary" %>
<% end %>