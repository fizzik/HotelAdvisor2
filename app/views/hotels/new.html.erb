<p>Create hotel</p>
<%= form_for @hotel, :html =>{:multipart => true} do |f| %>
    <p class="muted">Fields with * are required!</p>
    <%= f.label :title, "*Title:" %>
    <%= f.text_field :title %>

    <%= f.label :room_description %>
    <%= f.text_area :room_description, rows:6 %>

    <%= f.label :price  %>
    <%= f.text_field :price %>

    <%= f.label :breackfast %>
    <%= f.select :breackfast, Hotel::HOTEL_BREACKFAST %>

    <%= f.label :image %>
    <%= f.file_field :image %>
    <hr/>
    <div class="center">
      <p class="text-info">Add address hotel</p>
    </div>
    <%= f.label :country %>
    <%= f.text_field :country %>

    <%= f.label :state %>
    <%= f.text_field :state %>

    <%= f.label :city %>
    <%= f.text_field :city %>

    <%= f.label :street %>
    <%= f.text_field :street %>

    <br/>
    <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>